<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ReportsActivity">

    <!-- AppBarLayout con Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@drawable/bg_toolbar_gradient">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Consolidado"
            app:titleTextAppearance="@style/ToolbarTitleStyle"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/white" />

        <!-- Header Card con info de la secci칩n -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- T칤tulo principal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_report_card"
                        app:tint="@color/primaryColor"
                        android:contentDescription="Consolidado"
                        android:padding="8dp"
                        android:background="@drawable/bg_icon_circle_light_blue" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Consolidado - 2춿 A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Consolidado - 2춿 A" />

                        <TextView
                            android:id="@+id/tvCompetencyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1 Competencia Evaluada"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            tools:text="3 Competencias | 8 Sesiones" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Badges informativos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <!-- Badge Estudiantes -->
                    <TextView
                        android:id="@+id/tvStudentsBadge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="游논 25 Estudiantes"
                        android:textSize="12sp"
                        android:textColor="@color/primaryColor"
                        android:background="@drawable/bg_badge_count_blue"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:gravity="center"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif-medium"
                        tools:text="游논 25 Estudiantes" />

                    <!-- Badge Sesiones -->
                    <TextView
                        android:id="@+id/tvSessionsBadge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="游닄 8 Sesiones"
                        android:textSize="12sp"
                        android:textColor="@color/secondaryColor"
                        android:background="@drawable/bg_badge_count_green"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        tools:text="游닄 8 Sesiones" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal con SwipeRefresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStudents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="12dp"
            android:paddingBottom="100dp"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:fadeScrollbars="false"
            tools:listitem="@layout/item_report_student" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Action Bar con Botones Mejorados -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <!-- Bot칩n QR Mejorado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateQR"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:text="Generar QR"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_qr_code"
                app:iconTint="@color/primaryColor"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:strokeColor="@color/primaryColor"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp"
                app:rippleColor="@color/colorPrimaryLight" />

            <!-- Bot칩n Exportar Mejorado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportExcel"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="Exportar PDF"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_download"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="@color/secondaryColor"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Progress Overlay Mejorado -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/primaryColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando consolidado..."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>