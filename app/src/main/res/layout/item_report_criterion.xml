<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/bg_criterion_item">

    <TextView
        android:id="@+id/tvCriterionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="• Propone alternativa de solución tecnológica"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:layout_marginEnd="8dp"
        tools:text="• Propone alternativa de solución" />

    <TextView
        android:id="@+id/tvCriterionGrade"
        android:layout_width="52dp"
        android:layout_height="36dp"
        android:text="A"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_grade_enhanced"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-black"
        tools:text="A" />

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_observation_button">

        <ImageView
            android:id="@+id/ivObservation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_note_empty"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Observación"
            app:tint="@color/text_hint" />

    </FrameLayout>

</LinearLayout>