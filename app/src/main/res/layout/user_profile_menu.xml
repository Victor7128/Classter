<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con gradiente y avatar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_menu_header"
            android:padding="24dp">

            <!-- Decoración de fondo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_user_pattern"
                android:alpha="0.15"
                app:tint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Decoración" />

            <!-- Avatar con borde -->
            <FrameLayout
                android:id="@+id/frameAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_avatar_border"
                android:padding="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_avatar"
                    android:background="@drawable/bg_avatar_circle"
                    android:padding="16dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Avatar de usuario" />

            </FrameLayout>

            <!-- Información del usuario -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/frameAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/frameAvatar"
                app:layout_constraintBottom_toBottomOf="@id/frameAvatar">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Usuario"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="usuario@ejemplo.com"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp" />

                <!-- Badge del rol -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvUserRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOCENTE"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryColor"
                        android:textAllCaps="true"
                        android:background="@drawable/bg_role_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium" />

                </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenido del menú -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Opción Cambiar Tema -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChangeTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/llChangeTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_theme">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_theme"
                            android:layout_gravity="center"
                            app:tint="@color/accentColor"
                            android:contentDescription="Cambiar tema" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tema de la app"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvCurrentTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seguir sistema"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/text_hint"
                        android:contentDescription="Flecha" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Opción Cambiar Contraseña -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/llChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_blue">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock"
                            android:layout_gravity="center"
                            app:tint="@color/primaryColor"
                            android:contentDescription="Cambiar contraseña" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cambiar Contraseña"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actualiza tu contraseña"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/text_hint"
                        android:contentDescription="Flecha" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="8dp" />

            <!-- Opción Cerrar Sesión -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/llLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_red">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_logout"
                            android:layout_gravity="center"
                            app:tint="@color/error"
                            android:contentDescription="Cerrar sesión" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cerrar Sesión"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/error"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salir de tu cuenta"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/error"
                        android:contentDescription="Flecha" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Footer con versión -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classter v1.0.0"
                android:textSize="11sp"
                android:textColor="@color/text_hint"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:alpha="0.7" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>