<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header del Bimestre con gradiente -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBimesterHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bimester_header"
            android:padding="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <!-- Icono decorativo de fondo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_bimester_bg"
                android:alpha="0.1"
                app:tint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Decoración" />

            <!-- Badge del número de bimestre -->
            <FrameLayout
                android:id="@+id/cardBimesterBadge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_badge_circle_white"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvBimesterNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="III"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black" />

            </FrameLayout>

            <!-- Nombre del bimestre -->
            <TextView
                android:id="@+id/tvBimesterName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="III Bimestre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/cardBimesterBadge"
                app:layout_constraintEnd_toStartOf="@id/ivExpandIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Icono de expansión animado -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_expand_icon_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/ivExpandIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_expand_more"
                    android:padding="8dp"
                    app:tint="@color/white" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenedor de Grados (expandible) -->
        <LinearLayout
            android:id="@+id/layoutGradesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:background="@drawable/bg_grades_container">

            <!-- Divider decorativo -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_divider_gradient"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView para grados -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewGrades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <!-- Botón para agregar grado mejorado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Grado"
                android:textColor="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                app:icon="@drawable/ic_add_circle"
                app:iconTint="@color/primaryColor"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primaryColor"
                app:rippleColor="@color/colorPrimaryLight"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>