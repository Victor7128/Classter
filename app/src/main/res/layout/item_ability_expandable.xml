<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header de la capacidad -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutAbilityHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <!-- Icono de expansiÃ³n -->
            <FrameLayout
                android:id="@+id/frameAbilityExpandIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_expand_ability_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivAbilityExpandIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_expand_more"
                    android:layout_gravity="center"
                    app:tint="@color/secondaryColor"
                    android:contentDescription="Expandir" />

            </FrameLayout>

            <!-- InformaciÃ³n de la capacidad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/frameAbilityExpandIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Badge de nivel -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ CAPACIDAD"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondaryColor"
                    android:background="@drawable/bg_level_badge_ability"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="sans-serif-black" />

                <!-- Nombre de la capacidad -->
                <TextView
                    android:id="@+id/tvAbilityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Traduce cantidades a expresiones numÃ©ricas"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Traduce cantidades a expresiones numÃ©ricas" />

                <!-- Contador de criterios -->
                <TextView
                    android:id="@+id/tvCriteriaCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“ 5 criterios"
                    android:textSize="11sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="âœ“ 5 criterios" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- âœ… NUEVO: Botones de acciÃ³n visibles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <!-- BotÃ³n Eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteAbility"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Eliminar"
                android:textSize="12sp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:strokeColor="@color/error"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <!-- Contenido expandible de criterios -->
        <LinearLayout
            android:id="@+id/layoutAbilityExpandedContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F5F5F5"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            tools:visibility="visible">

            <!-- BotÃ³n agregar criterio -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutAgregarCriterio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#F3E5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_add_criterion_circle">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_add"
                            android:layout_gravity="center"
                            app:tint="@color/white"
                            android:contentDescription="Agregar" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="Crear Criterio de EvaluaciÃ³n"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de criterios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCriteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_criterion" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>