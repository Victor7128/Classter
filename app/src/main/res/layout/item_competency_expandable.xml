<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header de la competencia CON MS ESPACIO -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCompetencyHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:minHeight="80dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <!-- Icono de expansi贸n MS GRANDE -->
            <FrameLayout
                android:id="@+id/frameExpandIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_expand_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivExpandIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_expand_more"
                    android:layout_gravity="center"
                    app:tint="@color/primaryColor"
                    android:contentDescription="Expandir" />

            </FrameLayout>

            <!-- Informaci贸n de la competencia -->
            <LinearLayout
                android:id="@+id/layoutCompetencyInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/frameExpandIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Badge de nivel -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" COMPETENCIA"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"
                    android:background="@drawable/bg_level_badge_competency"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-black" />

                <!-- Nombre de la competencia -->
                <TextView
                    android:id="@+id/tvCompetencyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resuelve problemas de cantidad"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Resuelve problemas de cantidad" />

                <!-- rea curricular -->
                <TextView
                    android:id="@+id/tvCompetencyDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rea: Matem谩tica"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="6dp"
                    tools:text="rea: Matem谩tica" />

                <!-- Contador de capacidades -->
                <TextView
                    android:id="@+id/tvAbilitiesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 3 capacidades"
                    android:textSize="12sp"
                    android:textColor="@color/secondaryColor"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text=" 3 capacidades" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Divider -->
        <View
            android:id="@+id/dividerHeader"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginHorizontal="20dp" />

        <!-- Bot贸n Eliminar MS ESPACIOSO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteCompetency"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Eliminar Competencia"
                android:textSize="14sp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:strokeColor="@color/error"
                app:strokeWidth="1.5dp"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <!-- Contenido expandible -->
        <LinearLayout
            android:id="@+id/layoutExpandedContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#FAFAFA"
            android:paddingTop="8dp"
            tools:visibility="visible">

            <!-- Bot贸n agregar capacidad MS GRANDE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutAgregarCapacidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#E8F5E8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:minHeight="64dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_add_ability_circle">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_add"
                            android:layout_gravity="center"
                            app:tint="@color/white"
                            android:contentDescription="Agregar" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Agregar Capacidad del Cat谩logo"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de capacidades CON MS PADDING -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAbilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_ability_expandable" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>